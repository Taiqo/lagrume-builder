.textarea
    display: block
    padding: $padding
    border-radius: $border-radius
    font-size: $font-default
    line-height: 1em
    border-width: 1px
    border-style: solid
    border-color: $gray
    text-align: $start-direction
    color: $dark
    margin: multiple($margin, 1/2) 0
    resize: none
    width: 100%

    &:focus
        outline: 0
        border-color: $mainColor
        + .input-group-icon
            fill: $mainColor
            color: $mainColor
            stroke: $mainColor
