.motion
    animation-duration: 0.75s
    animation-fill-mode: both

    &.is-fade-in
        animation-name: fadeIn
    &.is-fade-in-up
        animation-name: fadeInUp

    &.is-fade-out
        animation-name: fadeOut
    &.is-fade-out-up
        animation-name: fadeOutUp


    &.is-infinite
        animation-iteration-count: infinite
